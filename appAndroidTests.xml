<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression" parallel="methods" thread-count="1">
    <listeners>
        <listener class-name="org.nextory.ui_automation.mobile.base.Utils.CustomTestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/> <!-- Allure Reporting -->
        <listener class-name="org.nextory.ui_automation.mobile.base.Utils.RetryTransformer"/> <!-- Apply Retry Globally -->
        <listener class-name="org.nextory.ui_automation.mobile.base.Utils.RetryListener"/> <!-- Logs Retries  -->
        <listener class-name="org.nextory.ui_automation.mobile.base.Utils.TestNGListener"/>
    </listeners>
    <test name="Test Cases">
        <groups>
            <run>
                <include name="AudioPlayerBookTest"/>
            </run>
        </groups>
        <classes>
            <class name="org.nextory.ui_automation.mobile.tests.AudioPlayerBookTest"/>
        </classes>
    </test>
</suite>





